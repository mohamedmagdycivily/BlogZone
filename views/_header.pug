header.header
  nav.nav.nav--tours
    a.nav__el(href='/') All posts
    if user
      a.nav__el(href='/myInterests') interests
      a.nav__el(href=`/myPosts/${user._id}`) my posts
      a.nav__el(href='/create-post') New post
  .header__logo
    img(src='/img/icon3.png' alt='Natours logo')
  nav.nav.nav--user
    if user
      a.nav__el.nav__el--logout Log out
      a.nav__el(href='/me')
        img.nav__user-img(src=`/img/users/${user.photo}` alt=`Photo of ${user.name}`)
        span= user.name.split(' ')[0]
    else
      a.nav__el(href='/login') Log in
      a.nav__el.nav__el--cta(href='/signUp') Sign up