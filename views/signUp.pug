extends base

block content
  main.main
    .user-view
      .user-view__content
        .user-view__form-container
          h2.heading-secondary.ma-bt-md BlogZone
       
          form.form.form-user-create
            .form__group
              label.form__label(for='name') Name
              input#name_create.form__input(type='text', required, name='name')
            .form__group.ma-bt-md
              label.form__label(for='email') Email address
              input#email_create.form__input(type='email', required, name='email')
           
            .form__group
              label.form__label(for='password') New password
              input#password_create.form__input(type='password', placeholder='••••••••', required, minlength='8')
            .form__group.ma-bt-lg
              label.form__label(for='password-confirm') Confirm password
              input#password_confirm_create.form__input(type='password', placeholder='••••••••', required, minlength='8')
            .form__group.form__photo-upload
             img.form__user-photo(src=`/img/users/default.jpg`, alt='User photo')
             input.form__upload(type='file', accept='image/*', id='photo', name='photo')
             label(for='photo') Choose new photo
            .form__group.right
              button.btn.btn--small.btn--green.btn--save-account Sign Up